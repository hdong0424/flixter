<br />

<div class="booyah-box col-8 offset-2">
	<h1 class="text-center"><%= "Courses I'm Learning" %></h1>
	<br />
	<% current_user.enrolled_courses.each do |course| %>
		<h3 class="text-center">
			<%= link_to course.title, course_path(course) %>
		</h3>
		<br />
		<%= image_tag course.image.to_s, class: 'img-fluid' %>
		<br />
		<div class="row">
			<div class="col-12 col-sm-8">
				<%= course.description %>
			</div>
			<div class="col-12 col-sm-4 text-center">
				<%= link_to "More Info...", course_path(course), class: 'btn btn-md btn-success' %>
			</div>
		</div>
		<hr class="col-8 offset-2">
		<br class="clr" />
	<% end %>

	<h1 class="text-center"><%= "Courses I'm Teaching" %></h1>
	<br />
	<% current_user.courses.each do |course| %>
		<h3 class="text-center">
			<%= link_to course.title, course_path(course) %>
		</h3>
		<br />
		<%= image_tag course.image.to_s, class: 'img-fluid' %>
		<br />
		<div class="row">
			<div class="col-12 col-sm-8">
				<%= course.description %>
			</div>
			<div class="col-12 col-sm-4 text-center">
				<%= link_to "More Info...", course_path(course), class: 'btn btn-md btn-success' %>
			</div>
		</div>
		<hr class="col-8 offset-2">
		<br class="clr" />
	<% end %>
</div>